package arraylist;

import java.util.ArrayList;

public class ArrayListDemo {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
//		arraylist is a type of dynamic array class in which the size of array increase as the data increases 
		ArrayList <Integer> list1=new ArrayList<>();
		
//		the initial size of the arraylist is zero
		System.out.println(list1.size());
		
//		capacity is the max number which we can enter in our arraylist whereas size is the no of elements currently present in arraylist
		list1.add(15);
		
//		adds at the end of the arraylist
		list1.add(20);
		list1.add(25);
		
		System.out.println(list1.size());
//		get the value at the particular location in the arraylist
		
		System.out.println(list1.get(1));
		
//		adds element at specific index
		list1.add(1, 5);
		
//		print the elements in the arraylist
		for(int i=0;i<list1.size();i++) {
			System.out.println(list1.get(i));
		}
		
//		remove element from the list
		list1.remove(1);
		
//		set the value at particular index
		list1.set(2, 13);
		
//		usage of for each loop
		for(int element:list1) {
			System.out.println(element);
		}
		
		

	}

}
